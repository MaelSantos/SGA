<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #008B8B;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.sga.controle.ControleCliente">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#actionButton" text="Adicionar Cliente" />
              </buttons>
            </ButtonBar>
         </bottom>
         <padding>
            <Insets bottom="50.0" left="5.0" right="5.0" top="50.0" />
         </padding>
         <top>
            <FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" hgap="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Buscar" textFill="WHITE">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfdBusca" onKeyPressed="#actionKey" />
                  <ComboBox fx:id="cbxTipo" onAction="#actionButton" prefWidth="150.0" promptText="Tipo" />
               </children>
            </FlowPane>
         </top>
         <center>
            <TableView fx:id="tblClientes" prefHeight="458.0" prefWidth="687.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colNome" prefWidth="75.0" text="Nome" />
                <TableColumn fx:id="colCpfCnpj" prefWidth="75.0" text="CPF/CNPJ" />
                  <TableColumn fx:id="colRg" prefWidth="75.0" text="RG" />
                  <TableColumn fx:id="colTelefone" prefWidth="75.0" text="Telefone" />
                  <TableColumn fx:id="colEmail" prefWidth="75.0" text="Email" />
                  <TableColumn fx:id="colTipo" prefWidth="75.0" text="Tipo" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
