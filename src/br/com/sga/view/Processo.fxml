<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #008B8B;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.sga.controle.ControleProcesso">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox alignment="CENTER" prefHeight="89.0" prefWidth="680.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Consulta de Processos" textFill="WHITE">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Label>
                  <Separator prefWidth="200.0" />
               </children>
            </VBox>
         </top>
         <bottom>
            <ButtonBar prefHeight="69.0" prefWidth="680.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#actionButton" text="Cadastrar Processo">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Button>
              </buttons>
            </ButtonBar>
         </bottom>
         <center>
            <VBox alignment="CENTER_LEFT" prefHeight="600.0" prefWidth="700.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="10.0" prefHeight="42.0" prefWidth="660.0">
                     <children>
                        <TextField fx:id="tfdBusca" prefHeight="25.0" prefWidth="378.0" />
                        <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#actionButton" text="Buscar">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </Button>
                        <ComboBox fx:id="cbxTipo" prefWidth="150.0" promptText="Tipo" />
                     </children>
                  </FlowPane>
                  <Label text="Processos" textFill="WHITE">
                     <font>
                        <Font name="Verdana" size="14.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tblProcesso" prefHeight="325.0" prefWidth="660.0" tableMenuButtonVisible="true">
                    <columns>
                      <TableColumn fx:id="colNumero" prefWidth="75.0" text="Numero" />
                      <TableColumn fx:id="colComarca" prefWidth="75.0" text="Comarca" />
                        <TableColumn fx:id="colPartes" prefWidth="75.0" text="Partes" />
                        <TableColumn fx:id="colAndamento" prefWidth="75.0" text="Andamento" />
                        <TableColumn fx:id="colData" prefWidth="75.0" text="Data" />
                        <TableColumn fx:id="colAcoes" prefWidth="75.0" text="Ações" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
